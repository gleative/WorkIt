<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gleative.workit">

    <application
        android:allowBackup="true"
        android:icon="@drawable/workit_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExerciseActivity"
            android:label="Exercises">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyWorkoutActivity"
            android:label="My Workouts" />
        <activity
            android:name=".StartWorkoutActivity"
            android:label="Start Workout" />
        <activity
            android:name=".ExerciseInfoActivity"
            android:parentActivityName=".ExerciseActivity" />
        <activity
            android:name=".CreateWorkoutActivity"
            android:label="Create Workout"
            android:parentActivityName=".MyWorkoutActivity" />
        <activity android:name=".CreateCustomExerciseActivity" />
        <activity android:name=".MyWorkoutInfoActivity" />
        <activity android:name=".WorkoutDoneActivity"
            android:label="Workout Done"/>
    </application>

</manifest>